{
  "name": "@flowlist/js-core",
  "version": "3.0.0",
  "description": "flowlist frontend javascript core",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flowlist/js-core.git"
  },
  "keywords": [
    "flowlist",
    "listview"
  ],
  "author": "falstack",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flowlist/js-core/issues"
  },
  "homepage": "https://github.com/flowlist/js-core#readme",
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run test:unit && npm run build",
    "test:unit": "jest",
    "lint": "eslint src --ext .ts --fix && prettier --write ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "prettier": "^3.6.2",
    "ts-jest": "^29",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
